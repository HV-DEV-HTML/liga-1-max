---
import Button from "@UI/Button.astro";
import slider_01 from "@/assets/slider_01.webp";
import slider_02 from "@/assets/slider_02.webp";
import slider_03 from "@/assets/slider_03.webp";
import slider_04 from "@/assets/slider_04.webp";
import "swiper/css/bundle";
---

<section
  class="bg-transparent section_reconocimientos xl:max-w-[960px] xl:mx-auto"
>
  <div
    class="container flex gap-2 md:gap-8 md:gap-y-0 flex-col md:grid md:grid-cols-[300px_1fr] items-center xl:pr-0 justify-between relative"
  >
    <div
      class="flex flex-col items-center lg:items-start justify-center gap-4 pb-6 order-2 w-full"
    >
      <h2
        class="title_slider text-center md:text-left text-balance text-xl md:text-2xl font-bold font-amx-bold leading-[1.1] w-full"
      >
        ¿Qué es la <span class="text-claro">Liga 1</span>?
      </h2>
      <p
        class="description_slider text-center md:text-left text-base font-amx-regular leading-normal"
      >
        La <strong class="font-amx-bold">Liga 1</strong> es el campeonato de <strong
          class="font-amx-bold">fútbol profesional del Perú</strong
        >, organizado por la Federación Peruana de Fútbol. Cada temporada, reúne
        a los clubes más importantes del país que compiten por el título
        nacional y por la clasificación a torneos internacionales como la Copa
        Libertadores y la Copa Sudamericana.
      </p>
    </div>
    <div
      class="flex flex-row justify-center items-center gap-4 pt-5 md:pt-0 mx-auto md:col-span-2 order-3 lg:absolute lg:left-[350px] lg:bottom-3 2xl:-bottom-1"
      style="--swiper-navigation-size: 14px;--swiper-navigation-color: #fff"
    >
      <div
        class="swiper-button-prev relative mt-0 after:font-black border-2 text-claro hover:text-white border-claro bg-transparent hover:border-claro hover:bg-claro rounded-full left-0 w-[44px] h-[44px] transition-colors duration-200 ease-out"
      >
      </div>
      <div
        class="swiper-pagination relative bottom-auto left-auto right-auto w-fit"
      >
      </div>
      <div
        class="swiper-button-next relative mt-0 after:font-black border-2 text-claro hover:text-white border-claro bg-transparent hover:border-claro hover:bg-claro rounded-full right-0 w-[44px] h-[44px] transition-colors duration-200 ease-out"
      >
      </div>
    </div>
    <div class="swiper sliderReconocimientos w-full order-2 md:order-1">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <picture class="flex items-center justify-center">
            <img
              class="w-full h-full max-w-[250px] md:max-w-[400px] object-cover rounded-4xl xl:rounded-[48px] relative transition-all duration-200 ease-out"
              src={slider_01.src}
              alt="LIGA 1 MAX"
            />
          </picture>
        </div>
        <div class="swiper-slide">
          <picture class="flex items-center justify-center">
            <img
              class="w-full h-full max-w-[250px] md:max-w-[400px] object-cover rounded-4xl xl:rounded-[48px] relative transition-all duration-200 ease-out"
              src={slider_02.src}
              alt="LIGA 1 MAX CLARO"
            />
          </picture>
        </div>
        <div class="swiper-slide">
          <picture class="flex items-center justify-center">
            <img
              class="w-full h-full max-w-[250px] md:max-w-[400px] object-cover rounded-4xl xl:rounded-[48px] relative transition-all duration-200 ease-out"
              src={slider_03.src}
              alt="FUTBOL PERUANO"
            />
          </picture>
        </div>
        <div class="swiper-slide">
          <picture class="flex items-center justify-center">
            <img
              class="w-full h-full max-w-[250px] md:max-w-[400px] object-cover rounded-4xl xl:rounded-[48px] relative transition-all duration-200 ease-out"
              src={slider_04.src}
              alt=""
            />
          </picture>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section_reconocimientos .description_slider a {
    color: #0093a3;
  }
</style>

<script>
  import Swiper from "swiper/bundle";
  const contentSlider = [
    {
      title: `¿Qué es la <span class="text-claro">Liga 1</span>?`,
      description: `La <strong class="font-amx-bold">Liga 1</strong> es el campeonato de <strong class="font-amx-bold">fútbol profesional del Perú</strong>, organizado por la Federación Peruana de Fútbol. Cada temporada, reúne a los clubes más importantes del país que compiten por el título nacional y por la clasificación a torneos internacionales como la Copa Libertadores y la Copa Sudamericana.`,
      link: "https://www.claro.com.pe/logros/",
    },
    {
      title: `¿Si tengo un plan de Claro TV+ puedo ver sin costo el canal de <span class="text-claro">L1MAX</span>?`,
      description: `Si, <strong class="font-amx-bold">L1MAX</strong> forma parte de la programación de <strong class="font-amx-bold">Claro TV</strong> y está incluido en <a href="https://www.claro.com.pe/personas/hogar/internet/" target="" class="font-amx-bold" style="color: #0093a3; font-weight: 700; text-decoration: underline;">planes hogar de 2Play y 3Play seleccionados</a>. Eso quiere decir que, no tiene costo adicional si tu plan ya lo contempla, lo que te permite seguir toda la Liga 1 Te Apuesto sin cargos extras.`,
      link: "https://www.claro.com.pe/institucional/sustentabilidad/",
    },
    {
      title: `¿Cómo puedo ver la <span class="text-claro">Liga 1 Max</span> si no cuento con un plan de Claro TV+?`,
      description: `Si cuentas con un plan de internet y/o internet con telefonía ahora puedes ingresar desde la app de Claro video. Solo necesitas descargar la aplicación en tu smartphone, tablet o Smart TV e ingresar a <a href="https://www.claro.com.pe/personas/app/claro-video/" target="" class="font-amx-bold" style="color: #0093a3; font-weight: 700; text-decoration: underline;" >www.clarovideo.com</a> y regístrate con tu correo. Si no tienes correo, puedes solicitarlo por <strong class="font-amx-bold">WhatsApp 915020030</strong> o llamando al <strong class="font-amx-bold">0800 00123.</strong>`,
      link: "https://www.claro.com.pe/institucional/sustentabilidad/",
    },
    {
      title: `¿Qué puedo ver en el canal de <span class="text-claro">Liga 1 Max</span>?`,
      description: `Con <strong class="font-amx-bold">L1MAX</strong> podrás ver en vivo los partidos de la <strong class="font-amx-bold">Liga 1 Te Apuesto</strong> (solo desde Perú) y programas especiales como Hablemos de MAX, L1, Radio, Match Gol, Brasileirão y mucho más.`,
      link: "https://www.claro.com.pe/institucional/sustentabilidad/",
    },
  ];
  const swiperSlider = new Swiper(".sliderReconocimientos", {
    slidesPerView: 1,
    spaceBetween: 20,
    pagination: {
      el: ".section_reconocimientos .swiper-pagination",
      type: "fraction",
    },
    navigation: {
      nextEl: ".section_reconocimientos .swiper-button-next",
      prevEl: ".section_reconocimientos .swiper-button-prev",
    },
  });
  //Capturar el evento change del slider
  swiperSlider.on("slideChange", (swiper) => {
    const titleSlider = document.querySelector(
      ".section_reconocimientos .title_slider"
    ) as HTMLHeadingElement;
    titleSlider.innerHTML = contentSlider[swiper.activeIndex].title.trim();
    const descriptionSlider = document.querySelector(
      ".section_reconocimientos .description_slider"
    ) as HTMLParagraphElement;
    descriptionSlider.innerHTML = contentSlider[swiper.activeIndex].description;
    console.log(swiper.activeIndex);
  });
</script>
