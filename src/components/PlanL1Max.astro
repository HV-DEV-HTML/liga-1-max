  /** ========================
   * FUNCI√ìN GENERAL CARRUSEL
   * ======================== */
  function inicializarTutorial(contenedor) {
    const tabs = contenedor.querySelectorAll(".subTabs .tab");
    const tabValue = contenedor.getAttribute("data-tab");
    const select = document.querySelector(`.selectTabs[data-tab="${tabValue}"] select`); // su selectTabs correspondiente
    const imgElement = contenedor.querySelector(".part2 img");
    const titleElement = contenedor.querySelector(".part3 .content p");
    const prevBtn = contenedor.querySelector(".flechas .prev");
    const nextBtn = contenedor.querySelector(".flechas .next");
    const indiceElement = contenedor.querySelector(".flechas .indice");
    const totalElement = contenedor.querySelector(".flechas .total");

    let pasos = [];
    let pasoActual = 1;

    function cargarCarrusel(nombreLista) {
      pasos = Object.values(tutoriales[nombreLista] || {});
      pasoActual = 1;
      totalElement.textContent = pasos.length;
      mostrarPaso();
    }

    function mostrarPaso() {
      if (pasos.length === 0) return;
      const paso = pasos[pasoActual - 1];

      imgElement.src = paso.image;
      titleElement.innerHTML = paso.title;
      indiceElement.textContent = pasoActual;

      // üëá buscamos el span donde va el parrafo adicional
      const spanElement = contenedor.querySelector(".part3 .informacion span");
      if (spanElement) {
        if (paso.parrafo) {
          spanElement.innerHTML = paso.parrafo; // lo mostramos
          spanElement.style.display = "inline"; // visible
        } else {
          spanElement.innerHTML = ""; // vac√≠o si no hay
          spanElement.style.display = "none"; // ocultar
        }
      }

      prevBtn.classList.toggle("disabled", pasoActual === 1);
      nextBtn.classList.toggle("disabled", pasoActual === pasos.length);
    }

    // eventos de subtabs
    tabs.forEach(tab => {
      tab.addEventListener("click", function () {
        tabs.forEach(t => t.classList.remove("active"));
        this.classList.add("active");
        const lista = this.getAttribute("data-lista");
        cargarCarrusel(lista);
        if (select) (select as HTMLSelectElement).value = lista; // sincroniza con select
      });
    });

    // evento del select
    if (select) {
      select.addEventListener("change", function () {
        const lista = this.value;
        cargarCarrusel(lista);
        tabs.forEach((t: HTMLElement) => {
          t.classList.toggle("active", t.getAttribute("data-lista") === lista);
        });
      });
    }

    // flechas
    prevBtn.addEventListener("click", function () {
      if (pasoActual > 1) {
        pasoActual--;
        mostrarPaso();
      }
    });

    nextBtn.addEventListener("click", function () {
      if (pasoActual < pasos.length) {
        pasoActual++;
        mostrarPaso();
      }
    });

    // inicializar con tab activo
    const tabActivo = contenedor.querySelector(".subTabs .tab.active");
    const listaInicial = tabActivo ? tabActivo.getAttribute("data-lista") : (select ? (select as HTMLSelectElement).value : null);
    if (listaInicial) cargarCarrusel(listaInicial);
  }

  /** ========================
   * INICIALIZAR TODOS
   * ======================== */
  document.querySelectorAll(".contentTutorial").forEach(contenedor => {
    inicializarTutorial(contenedor);
  });

  /** ========================
   * JUEGO DE TABS PRINCIPALES
   * ======================== */
  const tabs2 = document.querySelectorAll(".principal .tab");
  const checks = document.querySelectorAll(".checks");
  const selectTabs2 = document.querySelectorAll(".selectTabs");
  const contentTutorials = document.querySelectorAll(".contentTutorial");

  if (tabs2.length > 0) {
    const firstTabValue = tabs2[0].getAttribute("data-tab");
    activarSecciones(firstTabValue);
  }

  tabs2.forEach(tab => {
    tab.addEventListener("click", () => {
      tabs2.forEach(t => t.classList.remove("active"));
      tab.classList.add("active");
      const tabValue = tab.getAttribute("data-tab");
      activarSecciones(tabValue);
    });
  });

  function activarSecciones(tabValue: string) {
    checks.forEach(c => c.classList.remove("active"));
    const targetChecks = document.querySelector(`.checks[data-tab="${tabValue}"]`);
    if (targetChecks) targetChecks.classList.add("active");

    selectTabs2.forEach(s => s.classList.remove("active"));
    const targetSelect = document.querySelector(`.selectTabs[data-tab="${tabValue}"]`);
    if (targetSelect) targetSelect.classList.add("active");

    contentTutorials.forEach(ct => ct.classList.remove("active"));
    const targetContent = document.querySelector(`.contentTutorial[data-tab="${tabValue}"]`);
    if (targetContent) targetContent.classList.add("active");
  }
