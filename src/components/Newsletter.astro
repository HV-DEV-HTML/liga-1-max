<script>
  import JustValidate from "just-validate";

  // Configuración del validador
  const validator = new JustValidate("#newsletterForm", {
    validateBeforeSubmitting: true,
    errorsContainer: null,
  });
  validator
  .addField("#inputNameHV", [
    { rule: "required"},
    { rule: "minLength", value: 3, errorMessage: "Introduce un nombre válido." },
  ])
  .addField("#inputEmailHV", [
    { rule: "required", errorMessage: "Ingresar correo electrónico." },
    {
      rule: "email",
      errorMessage:
        "El correo electrónico debe tener mínimo 8 caracteres.",
    },
  ])
  .addField("#tratamiento", [
    { rule: "required", errorMessage: "Debes aceptar el tratamiento de datos personales." },
  ])

  validator.onValidate((event) => {
    // Verifica si el formulario completo es válido
    const btnSubmit = document.querySelector(".newsletterForm__main__button") as HTMLButtonElement;
    if (event.isValid) {
      btnSubmit.classList.remove("inactive");
      btnSubmit.disabled = false; // Habilita el botón
    } else {
      btnSubmit.classList.add("inactive");
      btnSubmit.disabled = true; // Deshabilita el botón
    }
  });

  validator.onSuccess(async (event) => {
      event.preventDefault(); // Prevenir el envío del formulario
      let tokeGrecaptcha = "";
      const form = event.target;
      const API_NEWSLETTER = 'https://crm.claromarketingcloud.pe/Front/Home/registro/?op=XH1hSXUnvMQ1EiW%2B9mq1uEzzS2pwmPheWC0X6j%2Bgyzw%3D';
      const formData = new FormData();
      formData.append('Nombre', form.querySelector('#inputNameHV').value);
      formData.append('Correo', form.querySelector('#inputEmailHV').value);
      formData.append('Tratamiento', form.querySelector('#tratamiento').value);
      grecaptcha?.ready(function () {
          grecaptcha?.execute("6Ld1_2caAAAAABG4EakA3PwvnyGjP2OLAn20_F9g", {
              action: "homepage",
            })
            .then(function (token) {
              tokeGrecaptcha = token;
              const formData = new FormData();
              formData.append('nombre_y_apellidos', form.querySelector('#inputNameHV').value);
              formData.append('correo_electronico', form.querySelector('#inputEmailHV').value);
              formData.append('acepto_terminos_y_condiciones', form.querySelector('#tratamiento').value ? 'si' : 'no');
              formData.append('quiero_recibi_promociones_y_beneficios_de_claro', form.querySelector('#promociones').value ? 'si' : 'no');
              formData.append("g-recaptcha-response", tokeGrecaptcha);
              console.log({tokeGrecaptcha})
              const toLocalStorage = {
                names: form.querySelector('#inputNameHV').value,
                email: form.querySelector('#inputEmailHV').value,
              }
              const users = JSON.parse(localStorage.getItem("HAVASXFPF-Suscription-Liga1Max"));
              if (users) {
                const newArr = new Array();
                newArr.push(...users);
                newArr.push(toLocalStorage);
                localStorage.setItem("HAVASXFPF-Suscription-Liga1Max", JSON.stringify(newArr));
              } else {
                const newArr = new Array();
                newArr.push(toLocalStorage);
                localStorage.setItem("HAVASXFPF-Suscription-Liga1Max", JSON.stringify(newArr));
              }
              fetch(`${API_NEWSLETTER}`, {
                method: "POST",
                body: formData
              })
              .then(resp => resp.json())
              .then(data => {
                console.log({data});
                if (data.status === '200') {
                  document.querySelector("#newsletterForm").classList.add("hidden");
                  document.querySelector(".newsletterTYP").classList.remove("hidden");
                }
              })
              .catch(err => {
                console.log(err);
              })
            });
        });
      
    });

  const openModalBtn = (name) => {
    const modal = document.querySelector(`.zone1__modal[data-name="${name}"]`);
    console.log(modal)
    modal.classList.remove("hidden");
  };
  const modalBtns = document.querySelectorAll(".open_modal_btn");
  modalBtns.forEach((btn) => {
    btn.addEventListener("click", (event) => {
      event.preventDefault();
      const nameModal = btn.getAttribute("data-name");
      console.log({nameModal})
      openModalBtn(nameModal);
    });
  });

  const closeBtns = document.querySelectorAll(".content2__close__button");
  closeBtns.forEach((btn) => {
    btn.addEventListener("click", (event) => {
      event.preventDefault();
      btn.closest(".zone1__modal").classList.add("hidden");
    });
  });
</script>