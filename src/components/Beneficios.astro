<style>
  .chico_beneficios {
    z-index: 2;
    bottom: 0;
    position: absolute;
    right: 96px;
  }
  @media (min-width: 641px) {
    section.section_benefits picture img {
      border-radius: 20px !important;
      overflow: hidden;
    }
  }
  @media (min-width: 1503px) {
    section.section_benefits picture img {
      height: 414px !important;
    }
  }
  @media (max-width: 1503px) and (min-width: 1280px) {
    section.section_benefits picture img {
      height: 368px !important;
    }
  }

  @media (max-width: 1279px) and (min-width: 1024px) {
    .chico_beneficios {
      right: 0px;
    }
    section.section_benefits picture img {
      height: 295px !important;
    }
  }

  @media (max-width: 1023px) {
    .chico_beneficios {
      width: 320px !important;
      height: 293.13px !important;
      right: initial;
      left: 50%;
      transform: translateX(-50%);
    }
  }

  @media (min-width: 1024px) {
    .chico_beneficios {
      width: 320px !important;
      height: 293.13px !important;
    }
  }

  @media (min-width: 1280px) {
    .chico_beneficios {
      width: 460px !important;
      height: 421.36px !important;
    }
  }

  @media (min-width: 1504px) {
    .chico_beneficios {
      width: 520px !important;
      height: 476.33px !important;
    }
  }
</style>

<script>
  const dataTabs = [
    {
      title: "Si viajas mucho",
      content: {
        title: "Si eres de las personas que viajan mucho...",
        text: "Con la eSIM podrás tener acceso a diferentes planes de datos en cada país sin tener que cambiar ni comprar un nuevo chip.",
      },
    },
    {
      title: "Si mantienes el equilibrio en tu vida",
      content: {
        title:
          "Si equilibrar tu vida personal y laboral es parte del día a día...",
        text: "Con la eSIM podrás administrar ambos números en el mismo dispositivo móvil, sin necesidad de usar dos teléfonos.",
      },
    },
    {
      title: "Si cambias de chip con frecuencia",
      content: {
        title: "Si eres de los que cambia de chip con frecuencia...",
        text: "Con la eSIM evitarás manipulaciones innecesarias y siempre tendrás tu línea segura en tu celular.",
      },
    },
  ];
  const section = document.querySelector(".section_benefits");
  const btnsTabs = document.querySelectorAll(".btn_tab_beneficio");
  if (btnsTabs.length) {
    btnsTabs.forEach((tabBtn) => {
      tabBtn.addEventListener("click", () => {
        const index = tabBtn.getAttribute("data-index");
        btnsTabs.forEach((item) =>
          item.classList.remove("text-claro", "bg-white")
        );
        tabBtn.classList.add("text-claro", "bg-white");
        section.querySelector(".title_content").textContent =
          dataTabs[index].content.title;
        section.querySelector(".text_content").textContent =
          dataTabs[index].content.text;
      });
    });
  }
</script>
