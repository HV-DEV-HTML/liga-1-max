<script is:inline>
  $(document).ready(function () {
    $('#slidermovies2').not('.slick-initialized').slick({
      dots: false,
      arrows: false,
      infinite: false,
      variableWidth: true,
      speed: 300,
      slidesToShow: 4,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 1025,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2,
            arrows: true,
          }
        },
        {
          breakpoint: 769,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            arrows: true,
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: true,
          }
        }
        // You can unslick at a given breakpoint now by adding:
        // settings: "unslick"
        // instead of a settings object
      ]
    });

    var $status = $('.pagingInfo2');
    var $slickElement = $('#slidermovies2');

    $slickElement.on('init reInit afterChange', function (event, slick, currentSlide, nextSlide) {
      //currentSlide is undefined on init -- set it to 0 in this case (currentSlide is 0 based)
      var i = (currentSlide ? currentSlide : 0) + 1;
      //- if(window.innerWidth <= 768px) {
      //-   return $status.text(i + '/' + '2');
      //- }
      $status.text(i + '/' + slick.slideCount);
    });
  })
</script>